if [ "$1" = "" ]
then
  echo -n "Enter refresh token: "
  read REFRESH_TOKEN
else
  REFRESH_TOKEN=`cat $1`
fi

printf "\nHere is your access token:\n"
curl -s -H "Authorization: Basic OTgyOTVhZDYzYTExNGNmMzk4MjU0OTBmMzcyODFjMzY6MjBhZjkwZTA3MzFlNGQ3ZmFmMzAzZDIzZGVlYWMxNjI" -d grant_type=refresh_token -d refresh_token=$REFRESH_TOKEN https://accounts.spotify.com/api/token | jq -r '.access_token'
