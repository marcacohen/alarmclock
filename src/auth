set -x 

SCOPES="streaming user-read-email user-read-private user-library-read user-library-modify user-read-playback-state user-modify-playback-state"
SCOPE=

for i in $SCOPES
do
  if [ "$SCOPE" == "" ]
  then
    SCOPE=$i
  else
    SCOPE="$SCOPE%20$i"
  fi
done

curl -X "GET" "https://accounts.spotify.com/authorize?client_id=98295ad63a114cf39825490f37281c36&response_type=code&redirect_uri=http://localhost:1313&scope=$SCOPE"
